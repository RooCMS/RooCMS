<IfModule mod_rewrite.c>
	RewriteCond %{HTTPS} !on
	RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}
	RewriteCond %{SERVER_PORT} !^443
	RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

	#	ATTENTION!
	#	This configuration file may generate side requests to the index file of your site
	#	in cases when your markup or scripts contain errors or links to non-existent files or folders.
	#	Such requests in large numbers can cause a load on your web server. 1 error = 1 extra request.
	#	Be careful. Before using this file, check the access.log and error.log files generated by your Apache server.
	#	If you find errors in your scripts, fix them before using them on a "production server".

	# Block any request trying to break base64_encode through URL
	RewriteCond %{QUERY_STRING} base64_encode[^(]*\([^)]*\) [OR]
	# Block any request containing <script> tag in URL
	RewriteCond %{QUERY_STRING} (<|%3C)([^s]*s)+cript.*(>|%3E) [NC,OR]
	# Block any request containing <iframe> tag in URL
	RewriteCond %{QUERY_STRING} (<|%3C).*iframe.*(>|%3E) [NC,OR]
	# Block any request containing jacascript in URL
	RewriteCond %{QUERY_STRING} (javascript:).*(;).* [NC]
	# Block any request containing attempt to inject DB in URL
	RewriteCond %{QUERY_STRING} (;|'|"|%22).*(union|select|insert|drop|update|md5|benchmark|or|and|if).* [NC]
	# Block any request trying to set value of global variables PHP through URL
	RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
	# Block any request trying to change _REQUEST variable through URL
	RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
	# Block dangerous characters in REQUEST_URI (path part)
	RewriteCond %{THE_REQUEST} (<|>|%3C|%3E|'|") [NC]
	# Redirect blocked requests to custom error page
	RewriteRule .* /err.php?code=403 [R=403,L]

	# Redirect blocked requests
	# RewriteRule .* index.php [F]

	# exclude /api/ from root routing
	RewriteCond %{REQUEST_URI} !^/api/
	# if requested path does not correspond to a physical file
	RewriteCond %{REQUEST_FILENAME} !-f
	# if requested path does not correspond to a physical folder
	RewriteCond %{REQUEST_FILENAME} !-d
	# then redirect request to index.php script
	RewriteRule .* index.php [L]

	#RedirectMatch 301 regexp /index.php?page=e410

	# HOTLINKING 
	# RewriteCond %{HTTP_REFERER} !^$
	# RewriteCond %{HTTP_REFERER} !^http://([-a-z0-9]\.)?roocms\.com [NC]
	# RewriteRule \.(gif|jpe?g|png)$ - [F,NC,L]
</IfModule>


